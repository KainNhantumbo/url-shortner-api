{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", 
    "moduleResolution": "node",  
    "outDir": "./dist",
    "removeComments": true, 
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
}
